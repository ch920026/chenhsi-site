</BaseLayout>

<style>
  .pic {
    display: flex;
    justify-content: center; /* Center horizontally */
    align-items: center; /* Center vertically (if the height is defined) */
    margin: 0 auto;
  }
  
  .wrapper {
    width: 100%;
    max-width: 80rem;
    margin-inline: auto;
    padding-inline: 1rem;
  }
  
  .about {
    display: flex;
    flex-direction: column;
    gap: 5rem 2.5rem;
  }
  
  img {
    margin-top: 1.5rem;
    border-radius: 1.5rem;
    box-shadow: var(--shadow-md);
    width: 70%;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  
  section {
    width: 100%;
    margin-bottom: 2rem;
  }
  
  .section-title {
    max-width: 80%;
    margin: 0 auto;
    font-size: var(--text-xxl);
    color: var(--gray-0);
    margin-bottom: 1rem; /* Space between title and content */
  }
  
  .content {
    max-width: 80%;
    display: grid;
    gap: 1rem;
    margin: 0 auto;
    font-size: var(--text-sm);

  }
  
  .row, .rowedu {
    display: grid;
    gap: 1.5rem; /* Space between rows */
  }
  
  .row {
    grid-template-columns: 1.2fr 1.7fr 1fr 1.5fr; /* Adjusted to include artist column */
  }
  
  .rowedu {
    grid-template-columns: 1.2fr 3fr 1.5fr ; /* Adjusted to include artist column */
  }
  
  .tablecol {
    font-size: var(--text-sm);
    color: var(--gray-200);
  }
  
  .tablecolt {
    font-size: var(--text-xxl);
    color: var(--gray-300);
  }
  
  @media (min-width: 50em) {
    img{

      width:50%;
    }
    .content{
      font-size: var(--text-lg);
      max-width: 70%;

    }
    .about {
      display: grid;
      grid-template-columns: 1fr;
    }
  
    section {
      display: block;
      font-size: var(--text-lg);
    }
  .section-title{
    max-width: 70%;
    font-size: var(--text-2xl);
  }
    .tablecol {
      font-size: var(--text-lg);
    }
  }
</style>
