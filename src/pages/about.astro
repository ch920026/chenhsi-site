---
import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import Hero from "../components/Hero.astro";
---

<BaseLayout title="About | Chen Hsi" description="About Chen Hsi">
  <div class="stack gap-20">
    <div class="pic">
      <Hero
        title="About"
        tagline="Hi, this is me. You can read below to learn more!"
      >
        <img
          width="1553"
          height="873"
          src="https://storage.googleapis.com/profolio_media/public/assets/profile.jpg"
          alt="Chen Hsi "
        />
      </Hero>
    </div>
    <main class="wrapper about">
      <section>
        <h2 class="section-title">Chen Hsi</h2>
        <div class="content">
          <p>
            Creative developer and installation engineer based in Taiwan, born in 1996. Graduated from the Department of Electrical Engineering at
            National Taiwan University. For the past few years, I have worked as
            an engineer at the art installation company WHYIXD and have also
            designed control systems for many artists' installations.
          </p>
        </div>
      </section>
      <section>
        <h2 class="section-title">Academic</h2>
        <div class="content">
          <div class="rowedu">
            <div class="tablecol">2015-2020</div>
            <div class="tablecol">Bachelor of Electrical Engineering</div>
            <div class="tablecol">National Taiwan University</div>
          </div>
          <div class="rowedu">
            <div class="tablecol">2019-2021</div>
            <div class="tablecol">Networking and Multimedia Lab</div>
            <div class="tablecol">National Taiwan University</div>
          </div>
          <div class="rowedu">
            <div class="tablecol">2020</div>
            <div class="tablecol">Published "Towards Cost Effective Server Population Estimation: A Case Study of Twitch"</div>
            <div class="tablecol">WWW Conference</div>
          </div>
        </div>
      </section>

      <section>
        <h2 class="section-title">Work</h2>
        <div class="content">
          <div class="row">
            <div class="tablecol">2022/3-2023/12</div>
            <div class="tablecol">WHYIXD </div>
            <div class="tablecol">Engineer</div>
            <div class="tablecol">Taipei</div>
          </div>
          <div class="row">
            <div class="tablecol">2021/9-2021/12</div>
            <div class="tablecol">Noise Kitchen </div>
            <div class="tablecol">Intern</div>
            <div class="tablecol">Taipei</div>
          </div>
          <div class="row">
            <div class="tablecol">2019/7-2020/7</div>
            <div class="tablecol">Crescendo Lab </div>
            <div class="tablecol">Intern</div>
            <div class="tablecol">Taipei</div>
          </div>
        </div>
      </section>

      <section>
        <h2 class="section-title">Designed Projects</h2>
        <div class="content">
          <div class="row">
            <div class="tablecol">2024</div>
            <div class="tablecol">我們與他們的連結</div>
            <div class="tablecolt">Chou Tai Chun</div>
            <div class="tablecol">48x48 GAYA's Universe, Hualien</div>
          </div>
          <div class="row">
            <div class="tablecol">2024</div>
            <div class="tablecol">Customized Furniture</div>
            <div class="tablecolt">Hsiangfu Chen</div>
            <div class="tablecol">Taipei</div>
          </div>
          <div class="row">
            <div class="tablecol">2024</div>
            <div class="tablecol">Acoustic Mirror</div>
            <div class="tablecolt">404 nf</div>
            <div class="tablecol">Yue-Jing Lantern Festival, Tainan</div>
          </div>
          <div class="row">
            <div class="tablecol">2023</div>
            <div class="tablecol">Dark Halo </div>
            <div class="tablecolt">Hello Bast</div>
